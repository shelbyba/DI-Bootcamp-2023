import React, { useState } from 'react';

const Phone = () => {
  const [brand, setBrand] = useState('Samsung');
  const [model, setModel] = useState('Galaxy S20');
  const [color, setColor] = useState('black');
  const [year, setYear] = useState(2020);

  return (
    <div>
      <h2>Phone Details:</h2>
      <p>Brand: {brand}</p>
      <p>Model: {model}</p>
      <p>Color: {color}</p>
      <p>Year: {year}</p>
    </div>
  );
};

export default Phone;
